<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/item_background"
    android:padding="16dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--        <LinearLayout-->
        <!--            android:orientation="vertical"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content">-->
        <!--            <ImageView-->
        <!--                android:paddingRight="18px"-->
        <!--                app:riv_oval="true"-->
        <!--                android:id="@+id/avatar"-->
        <!--                android:layout_width="130dp"-->
        <!--                android:layout_height="70dp"-->
        <!--                android:scaleType="centerCrop"-->
        <!--                android:layout_weight="2" />-->
        <!--        </LinearLayout>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:paddingRight="18px"
                app:riv_oval="true"
                android:id="@+id/avatar"
                android:layout_width="130dp"
                android:layout_height="70dp"
                android:scaleType="centerCrop"
                android:layout_weight="2" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/click_visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="18px">

                    <TextView
                        android:padding="12px"
                        android:drawableLeft="@drawable/ic_baseline_person_24"
                        android:drawableRight="@drawable/baseline_keyboard_arrow_down_24"
                        android:id="@+id/name_recipient"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="TextView" />

                    <TextView
                        android:drawableLeft="@drawable/baseline_phone_24"
                        android:id="@+id/numberPhone_recipient"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding = "12px"
                        android:text="TextView" />
                </LinearLayout>

                <FrameLayout
                    android:background="@drawable/background_item"

                    android:id="@+id/item_infor_recipient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:background="@drawable/lavender_border"
                            android:layout_margin="6px"
                            android:layout_marginTop="6px"
                            android:padding="12px"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:padding="6px"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Mã nhân viên:" />

                            <TextView
                                android:padding="6px"
                                android:textColor="@color/black"
                                android:id="@+id/code_recipient"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:text="TextView" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="6px"
                            android:background="@drawable/lavender_border"
                            android:layout_margin="6px"
                            android:padding="12px"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:padding="6px"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Đơn vị vận chuyển:" />

                            <TextView
                                android:padding="6px"
                                android:id="@+id/unit_name"
                                android:layout_width="match_parent"
                                android:textSize="18sp"
                                android:textColor="@color/black"
                                android:layout_height="wrap_content"
                                android:text="TextView" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="6px"
                            android:background="@drawable/lavender_border"
                            android:layout_margin="6px"
                            android:padding="12px"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:padding="6px"
                                android:id="@+id/textView10"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Email:" />

                            <TextView
                                android:padding="6px"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:id="@+id/email_recipient"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="TextView" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="6px"
                            android:background="@drawable/lavender_border"
                            android:layout_margin="6px"
                            android:padding="12px"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:padding="6px"

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Vị trí:" />

                            <TextView
                                android:padding="6px"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:id="@+id/position_recipient"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="TextView" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="6px"
                            android:background="@drawable/lavender_border"
                            android:layout_margin="6px"
                            android:padding="12px"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:padding="6px"

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Trạng thái:" />

                            <TextView
                                android:padding="6px"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:id="@+id/status_recipient"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="TextView" />
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>

            </LinearLayout>

        </LinearLayout>
    </FrameLayout>



</LinearLayout>
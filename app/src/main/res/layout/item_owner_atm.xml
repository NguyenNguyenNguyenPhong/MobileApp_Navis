<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/item_background"
    android:padding="16dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:paddingRight="18px"
                    android:id="@+id/avatar"
                    android:layout_width="130dp"
                    android:layout_height="70dp"
                    android:scaleType="centerCrop"
                    android:layout_weight="2" />

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/click_visible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="18px">

                        <TextView
                            android:textColor="@color/black"
                            android:padding="12px"
                            android:drawableLeft="@drawable/ic_baseline_person_24"
                            android:drawableRight="@drawable/baseline_keyboard_arrow_down_24"
                            android:id="@+id/name_ownerATM"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="TextView" />

                        <TextView
                            android:textColor="@color/black"
                            android:drawableLeft="@drawable/baseline_phone_24"
                            android:id="@+id/numberPhone_ownerATM"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding = "12px"
                            android:text="TextView" />
                    </LinearLayout>



                </LinearLayout>


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line"/>
            <FrameLayout
                android:id="@+id/item_infor_ownerATM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout


                        android:padding="12px"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:padding="6px"
                            android:textColor="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Mã thủ quỹ cây ATM:" />

                        <TextView
                            android:padding="6px"
                            android:id="@+id/code_ownerATM"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TextView" />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/line"/>
                    <LinearLayout
                        android:padding="12px"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:textColor="@color/black"
                            android:padding="6px"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Đơn vị vận chuyển:" />

                        <TextView
                            android:padding="6px"
                            android:id="@+id/unit_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TextView" />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/line"/>

                    <LinearLayout
                        android:padding="12px"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:textColor="@color/black"
                            android:padding="6px"
                            android:id="@+id/textView10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Email:" />

                        <TextView
                            android:padding="6px"

                            android:id="@+id/email_ownerATM"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TextView" />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/line"/>

                    <LinearLayout

                        android:padding="12px"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:padding="6px"
                            android:textColor="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Số thẻ:" />

                        <TextView
                            android:padding="6px"
                            android:id="@+id/card_number_ownerATM"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TextView" />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/line"/>


                </LinearLayout>

            </FrameLayout>
            <LinearLayout
                android:orientation="vertical"
                android:padding="3px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:padding="6px"
                    android:id="@+id/update_OwnerATMInfor"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_span="1"
                    android:text="Cập nhật thông tin chủ hàng"
                    android:textColor="@color/blue"
                    android:textSize="14sp"
                    android:textStyle="italic"></TextView>
                <TextView
                    android:padding="6px"
                    android:gravity="center"
                    android:id="@+id/addNewOwnerATM"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_span="1"
                    android:text="Thêm mới chủ hàng ATM "
                    android:textColor="@color/green"
                    android:textSize="14sp"
                    android:textStyle="italic"></TextView>

                <TextView
                    android:padding="6px"
                    android:id="@+id/remove_RFID_OwnerATM"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_span="1"
                    android:gravity="right"
                    android:textColor="@color/red"
                    android:text="Gỡ thẻ RFID"
                    android:textSize="14sp"
                    android:textStyle="italic">

                </TextView>

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>



</LinearLayout>